/* pages/checkPage/checkPage.wxss */

page {
  background: #f6f6f6;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: fix-content;
}

.parallel_space_around{
  display: flex;
  flex-direction: row;
  padding: 3%;
  justify-content: space-around;
}

.parallel_right{
  display: flex;
  flex-direction: row;
  justify-content:right;
  margin-left: 50%;
  margin-right: auto;
  padding: 2%;
}


.my_button {
  height: 30px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  background-color: #4CAF50; /* Green */
  color: white;
  font-size: 15px;
  text-align: center;
  display: inline-block;
  line-height: 20px;
  padding:5px;
}


.my_little_button_checked {
  width: 30%;
  border: 1px solid rgba(0, 0, 0, 0.1);
  background-color:royalblue; /* Green */
  color: white;
  font-size: 15px;
  text-align: center;
  margin-left: auto;
  margin-right: 10px;
  display: inline-block;
  border-radius: 5px;
  line-height: 20px;
  padding:5px;
}

.my_little_button_unchecked {
  width: 30%;
  border: 1px solid rgba(0, 0, 0, 0.1);
  background-color: cornflowerblue; /* Green */
  color: white;
  font-size: 15px;
  text-align: center;
  margin-left: auto;
  margin-right: 10px;
  display: inline-block;
  border-radius: 5px;
  line-height: 20px;
  padding:5px;
}


.view_middle{
  display: flex;
  flex-direction:column;
  height: 70%;
  padding-top: 5%;
  justify-content:center;
  height:max-content;
  align-items: center;
}

.my_pic{
  height: 80%;
  width: 90%;
  align-items:center;
  padding: 3%;
}

.parallel_bottom{
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;

  padding-bottom: 5%;
}

.this_step_button{
  width: 40px !important;
  height:40px !important;
  background-color: sandybrown;
  border: 0 solid #ffffff;
  border-radius: 100px;
  font-size:15px;
  text-align: center;
  line-height: 40px;
  font-style:oblique;
  box-shadow: 4px 1px 1px #cccccc;
}

.not_this_step_button{
  width: 40px !important;
  height:40px !important;
  background-color:peachpuff;
  border: 0 solid #ffffff;
  border-radius: 100px;
  font-size:15px;
  font-style:oblique;
  line-height: 40px;
  text-align: center;
  box-shadow: 4px 1px 1px #cccccc;
}
